<!DOCTYPE html>
<html lang="en">
<head>
  <title>Customer Profile</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link rel="stylesheet" href="css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">

  <script src="js/jquery.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
</head>
<body>
<!-- navbar shiz -->

<nav class="navbar-fluid navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand">BogusFitnessClub</a>
    </div>
    <!-- <div class="collapse navbar-collapse" id="myNavbar"> -->
      <ul class="nav navbar-nav navbar-right">      
        <li><a href="n3.html"> About Us</a></li>
        <li><a href="#"> Contact Us</a></li>
        <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
      </ul>
    <!-- </div> -->
  </div>
</nav>

<!-- profile side bar for receptionist-->

  
<div class="container-fluid">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <div class="profile-user-pic">
          <img src="profile.png" alt="can't find image" class="img-responsive img-circle">
        <div class="profile-user-title">
          <!-- <br> -->
          <div class="profile-user-name">
            <h2>
              <%=user.emp_name%>
            </h2>
          </div>
          <div class="profile-user-job">
            <%=user.job%>
          </div>
        </div>
        <br>
        <!-- <div class="profile-user-buttons"> -->
          <!-- <button class="btn btn-success btn-sm">randome</button> -->
        <!-- </div> -->
        <div class="profile-user-menu">  
          <!-- check above -->
           <ul class="nav">
             <li><a href="/empprofile"><i class="glyphicon glyphicon-user"></i>  Employee Profile</a>
             <!-- <li class="active"><a href="">Profile</a> -->
             <%if(type == 'Receptionist'){%>
                <li><a href="/newuser"><i class="glyphicon glyphicon-plus"></i>   New Users</a>
                <li><a href="/attlog"><i class="glyphicon glyphicon-th-list"></i>   Attendance Log</a>
                <li class="active"><a href="/balance"><i class="glyphicon glyphicon-th-list"></i>   Add Balance</a>
             <%}%>
             <br>
             <!-- <li><a href=""><i class="glyphicon glyphicon-envelope"></i>   Feedback</li></a> -->
           </ul>
        </div>
      </div>
    </div>
  </div>

<!-- jumbotron -->
<div class="col-md-8">
  <div class="container">
    <div class="jumbotron">
      <h1>Update Card Balance</h1>
      <h3> </h3>
      <div class="container">
        <h2></h2>
        <!-- <h3>Please contact BogusFitnessClub in case of any issues with the following details.</h3> -->
        <br>
        <div class="col-md-8">  
        <%if (flash.length > 0 ){%>
          <p> <%=flash%> </p>
    <%}%>
        <form class="form-horizontal" method="post" action="/balance">
          <div class="form-group">
            <label class="control-label col-sm-2" for="userid">UserID:</label>
            <div class="col-sm-10">
              <input type="number" name="userid" class="form-control" placeholder="Enter UserID">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="date">Amount Paid:</label>
            <div class="col-sm-10">
              <input type="number" name="amt" class="form-control" placeholder="Enter Amount Paid">
            </div>
          </div>
          <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
    </div>
    </div>      
  </div>
</div>
</div>

</body>
</html>

