<!-- jumbotron -->
<div class="col-md-8">
  <div class="container">
    <div class="jumbotron">
      <h1>Customer Attendance Log</h1>
      <h3> </h3>
      <div class="container">
        <h2></h2>
        <!-- <h3>Please contact BogusFitnessClub in case of any issues with the following details.</h3> -->
        <br>
        <div class="col-md-8">  
        <% if(1>0){%>
        <form class="form-horizontal" method="post" action="/attlog">
          <div class="form-group">
            <label class="control-label col-sm-2" for="userid">UserID:</label>
            <div class="col-sm-10">
              <input type="text" name="userid" class="form-control" placeholder="Enter UserID" required>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="date">Date:</label>
            <div class="col-sm-10">
              <input type="date" name="date" class="form-control" placeholder="Enter Date of Attendance" required>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="place">Place:</label>
            <div class="col-sm-10">
              <label><input type="radio" id="subChoice1" name="sub" value="Gym" required>   Gym     </label>
              <label><input type="radio" id="subChoice2" name="sub" value="Kick Boxing Arena">   Kick Boxing Arena     </label>
              <label><input type="radio" id="subChoice3" name="sub" value="Aerobics">   Aerobics     </label>
              <label><input type="radio" id="subChoice4" name="sub" value="Power Yoga">   Power Yoga     </label>
            </div>
          </div>
          <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
    <%}%>
    <%if(flash.length>0){%>
      <%= flash%>
    <%}%>	
      </div>
      <%if(flash=="Successfully Added"){%>
      <div class="col-md-8">  
          <h2> Modify Customer </h2><br>
          <form class="form-horizontal" method="post" action="/modifyc">
            <div class="form-group">
              <label class="control-label col-sm-2" for="username">Username: </label>

              <input type="hidden" name="userid" value=<%= cust.cust_id %>>
              <div class="col-sm-10">
                <input type="text" name="username" class="form-control"  value=<%=cust.cust_name%>>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="trainer">Sex: <%=cust.sex%></label>
              <div class="col-sm-10">
                <label><input type="radio" id="sexChoice1" name="sex" value="M">   Male     </label>
                <label><input type="radio" id="sexChoice2" name="sex" value="F">   Female     </label>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="age">Age:</label>
              <div class="col-sm-10">
                <input type="number" name="age" class="form-control" value=<%=cust.age%>>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="phno">MobileNo: </label>
              <div class="col-sm-10">
                <input type="number" name="phno" class="form-control" value=<%=cust.phno%>>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="address">Address: </label>
              <div class="col-sm-10">
                <textarea class="form-control" rows="3" name="address"  value=<%=cust.address%>></textarea>
              </div>
            </div>
            <!-- if textarea doesn't work -->
            <!-- <div class="form-group"> -->
              <!-- <label class="control-label col-sm-2" for="address">Address:</label> -->
              <!-- <div class="col-sm-10"> -->
                <!-- <input type="text" name="address" class="form-control" placeholder="Enter Address"> -->
              <!-- </div> -->
            <!-- </div> -->
            <div class="form-group">
              <label class="control-label col-sm-2" for="email">Email:</label>
              <div class="col-sm-10">
                <input type="email" name="email" class="form-control"  value=<%=cust.email%>>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="subdur">Subscription Duration:</label>
              <div class="col-sm-10">
                <input type="number" name="subd" class="form-control"  value=<%=cust.sub_dur%>>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="trainer">Subscription Type: <%=cust.sub_id%></label>
              <div class="col-sm-10">
                <label><input type="radio" id="subChoice1" name="sub" value="1001">  Platinum     </label>
                <label><input type="radio" id="subChoice2" name="sub" value="2001">  Gold     </label>
                <label><input type="radio" id="subChoice1" name="sub" value="3001">  Silver    </label>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="trainer">Trainer:</label>
              <div class="col-sm-10">
                <input type="number" name="trainer" class="form-control" placeholder=<%=cust.cust_name%>>
              </div>
            </div>
            <div class="form-group">        
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </form>
        
    <%if(moderr.length>0){%>
      <%=moderr%>
      <%}%>       
      </div>
      <%}%>
    </div>      
  </div>
</div>
</div>

</body>
</html>