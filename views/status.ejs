        <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
      </ul>
    <!-- </div> -->
  </div>
</nav>

<!-- profile side bar for receptionist-->

  
<div class="container-fluid">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <div class="profile-user-pic">
          <img src="profile.png" alt="can't find image" class="img-responsive img-circle">
        <div class="profile-user-title">
          <!-- <br> -->
          <div class="profile-user-name">
            <h2>
              <%=user.emp_name%>
            </h2>
          </div>
          <div class="profile-user-job">
            <%=user.job%>
          </div>
        </div>
        <br>
        <!-- <div class="profile-user-buttons"> -->
          <!-- <button class="btn btn-success btn-sm">randome</button> -->
        <!-- </div> -->
        <div class="profile-user-menu">  
          <!-- check above -->
           <ul class="nav">
             <li><a href="/empprofile"><i class="glyphicon glyphicon-user"></i>  Employee Profile</a>
             <!-- <li class="active"><a href="">Profile</a> -->
             <%if(type == 'Maintenance'){%> 
                <li><a href="/viewi"><i class="glyphicon glyphicon-align-left"></i>   View Inventory</a>
                <li><a href="/modifyi"><i class="glyphicon glyphicon-indent-left"></i>   Modify Inventory</a>
                <li><a href="/viewequip"><i class="glyphicon glyphicon-check"></i>   View Equipment</a>
                <li><a href="/modifyequip"><i class="glyphicon glyphicon-edit"></i>   Modify Equipment</a>
                <li class="active"><a href="/status"><i class="glyphicon glyphicon-equalizer"></i>   Update status</a>
              <%}%>
             <br>
             <!-- <li><a href=""><i class="glyphicon glyphicon-envelope"></i>   Feedback</li></a> -->
           </ul>
        </div>
      </div>
    </div>
  </div>

<!-- jumbotron -->
<div class="col-md-8">
  <div class="container">
    <div class="jumbotron">
      <h1>Status Updation</h1>
      <h3> </h3>
      <div class="container">
        <h2></h2>
        <!-- <h3>Please contact BogusFitnessClub in case of any issues with the following details.</h3> -->
        <br>
        <div class="table-responsive">            
        <table class="table table-hover">
          <thead>
            <th>Inventory ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Last Updated Status</th>
            <th>New Status</th>
            <th></th>
          </thead>
          <tbody>
            </tr>
    <% for(var i=0; i < rows.length; i++) { %>
    <form method="post" action="/status">
    
       <tr>
        <input type="hidden" name="id" value=<%= rows[i].type_id %>>
       <td><%= rows[i].type_id %>  </td>
       <td><%= rows[i].type_name %>  <!-- <INPUT TYPE="TEXT" NAME="name" value = <%=rows[i].type_name%>> --></td>
       <td><%= rows[i].price%>  <!--  <INPUT TYPE="number" NAME="price" size='0' value= <%=rows[i].price%>> --></td>
       <td><%= rows[i].status%></td>   
       <td><INPUT TYPE="number" NAME="status" size='0' value= <%=rows[i].status%> ></td>
       <td><button type="submit" class="btn btn-default" value="Submit">Confirm</td>
      </tr>
      
    </form>
    <% } %>

