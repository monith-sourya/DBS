</nav>

<!-- profile side bar for receptionist-->

  
<div class="container-fluid">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <div class="profile-user-pic">
          <img src="profile.png" alt="can't find image" class="img-responsive img-circle">
        <div class="profile-user-title">
          <!-- <br> -->
          <div class="profile-user-name">
            <h2>
              <%=user.emp_name%>
            </h2>
          </div>
          <div class="profile-user-job">
            <%=user.job%>
          </div>
        </div>
        <br>
        <!-- <div class="profile-user-buttons"> -->
          <!-- <button class="btn btn-success btn-sm">randome</button> -->
        <!-- </div> -->
        <div class="profile-user-menu">  
          <!-- check above -->
           <ul class="nav">
             <li><a href="/empprofile"><i class="glyphicon glyphicon-user"></i>  Employee Profile</a>
             <!-- <li class="active"><a href="">Profile</a> -->
             <%if(type == 'Receptionist'){%>
                <li class="active"><a href="/newuser"><i class="glyphicon glyphicon-plus"></i>   New Users</a>
                <li><a href="/attlog"><i class="glyphicon glyphicon-list-alt"></i>   Attendance Log</a>
                <li><a href="/balance"><i class="glyphicon glyphicon-euro"></i>   Add Balance</a>
             <%}%>
             <%if(type == 'Manager'){%>
                <li class="active"><a href="/newuser"><i class="glyphicon glyphicon-plus"></i>   New Users</a>
                <li><a href="/newemp"><i class="glyphicon glyphicon-asterisk"></i>   New Employees</a>
                  <li><a href="/stats"><i class="glyphicon glyphicon-piggy-bank"></i>   View Stats</a>
             <%}%>
             <br>
             <!-- <li><a href=""><i class="glyphicon glyphicon-envelope"></i>   Feedback</li></a> -->
           </ul>
        </div>
      </div>
    </div>
  </div>

<!-- jumbotron -->
<div class="col-md-8">
  <div class="container">
    <div class="jumbotron">
      <h1>User Registration</h1>
      <h3> </h3>
      <div class="container">
        <h2></h2>
        <!-- <h3>Please contact BogusFitnessClub in case of any issues with the following details.</h3> -->
        <br>
        <div class="col-md-8">  
        <form class="form-horizontal" method="post" action="/newuser">
          <div class="form-group">
            <label class="control-label col-sm-2" for="username">Username:</label>
            <div class="col-sm-10">
              <input type="text" name="username" class="form-control" placeholder="Enter Username">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="trainer">Sex:</label>
            <div class="col-sm-10">
              <label><input type="radio" id="sexChoice1" name="sex" value="M">   Male     </label>
              <label><input type="radio" id="sexChoice2" name="sex" value="F">   Female     </label>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="age">Age:</label>
            <div class="col-sm-10">
              <input type="number" name="age" class="form-control" placeholder="Enter Age">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="phno">MobileNo:</label>
            <div class="col-sm-10">
              <input type="number" name="phno" class="form-control" placeholder="Enter Mobile No.">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="address">Address:</label>
            <div class="col-sm-10">
              <textarea class="form-control" rows="3" name="address"></textarea>
            </div>
          </div>
          <!-- if textarea doesn't work -->
          <!-- <div class="form-group"> -->
            <!-- <label class="control-label col-sm-2" for="address">Address:</label> -->
            <!-- <div class="col-sm-10"> -->
              <!-- <input type="text" name="address" class="form-control" placeholder="Enter Address"> -->
            <!-- </div> -->
          <!-- </div> -->
          <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
              <input type="email" name="email" class="form-control" placeholder="Enter Email ID">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="subdur">Subscription Duration:</label>
            <div class="col-sm-10">
              <input type="number" name="subd" class="form-control" placeholder="Enter Duration of Subscription">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="trainer">Subscription Type:</label>
            <div class="col-sm-10">
              <label><input type="radio" id="subChoice1" name="sub" value="1001">  Platinum     </label>
              <label><input type="radio" id="subChoice2" name="sub" value="2001">  Gold     </label>
              <label><input type="radio" id="subChoice1" name="sub" value="3001">  Silver    </label>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="trainer">Trainer:</label>
            <div class="col-sm-10">
              <input type="number" name="trainer" class="form-control" placeholder="Enter Trainer No.">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="pass">Enter Password:</label>
            <div class="col-sm-10">
              <input type="password" name="pass1" class="form-control" placeholder="Enter Password">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="pass">Re-enter Password:</label>
            <div class="col-sm-10">
              <input type="password" name="pass2" class="form-control" placeholder="Re-enter Password">
            </div>
          </div>
          <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      
  <%for(var i =0 ; i < flash.length ;i++){%>
    <%=flash%>
    <%}%>       
    </div>
    </div>      
  </div>
</div>
</div>


</body>
</html>

